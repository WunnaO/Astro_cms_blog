---
const { title, img, description, paragraph, url } = Astro.props;
---

<div class="basis-[33.33%] flex flex-col gap-5 px-2 cursor-pointer">
  <div class="card_img w-full">
    <img
      alt={title}
      width="1600"
      height="901"
      src={img}
      class="w-full object-cover"
      style="color: transparent"
    />
  </div>
  <p
    class="text-white mm-txt text-[14px] w-[100%] lg:w-[85%] leading-[21.81px] font-bold"
  >
    {description}
  </p>
  <p class="text-[#767A81] mm-txt text-[12px] leading-[18.69px]">
    {paragraph}
  </p>
  <div class="btn">
    <a href={url}>
      <button
        class="text-[14px] lg:text-[12px] font-bold uppercase tracking-wide text-white py-2 px-3 border-solid border-[1px] border-[#FAC211] rounded-lg eng-txt"
      >
        Read more
      </button>
    </a>
  </div>
</div>
